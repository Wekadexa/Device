modules = ["kotlin", "nodejs-20"]

[nix]
channel = "stable-24_05"
packages = ["openjdk11", "gradle", "android-tools", "wget", "unzip"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Android App Build"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "android-app"

[[workflows.workflow]]
name = "Android App Build"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "./gradlew build"

[[workflows.workflow]]
name = "android-app"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "./gradlew installDebug && adb shell am start -n com.example.devicelockcompanion/.MainActivity"

[deployment]
run = ["sh", "-c", "./gradlew build"]
